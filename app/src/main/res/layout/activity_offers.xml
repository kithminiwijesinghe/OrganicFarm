<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".OffersActivity">
    <LinearLayout
        android:id="@+id/ll_main_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/header"
            android:gravity="center"
            android:orientation="vertical"
            android:textAlignment="center">

            <ImageView
                android:id="@+id/btnImgBack"
                android:layout_width="30dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="-170dp"
                android:src="@drawable/previous" />

            <TextView
                android:id="@+id/lblError_2"
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="-40dp"
                android:text="Offers"
                android:textAlignment="center"
                android:textColor="#FBFBFB"
                android:textSize="20dp" />

            <ImageView
                android:id="@+id/btnImgMenu"
                android:layout_width="30dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="170dp"
                android:layout_marginTop="-29dp"
                android:src="@drawable/open_menu" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/offerSearch"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:orientation="vertical"
            android:textAlignment="center">

            <SearchView
                android:layout_width="match_parent"
                android:layout_height="match_parent"></SearchView>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/offersCategory"
            android:layout_width="match_parent"
            android:layout_height="152dp"
            android:layout_marginTop="10dp"
            android:orientation="vertical">

            <CheckBox
                android:id="@+id/checkBoxVege"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layoutDirection="rtl"
                android:text="Vegetables"
                android:textSize="17dp" />

            <CheckBox
                android:id="@+id/checkBoxFruits"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layoutDirection="rtl"
                android:text="Fruits          "
                android:textSize="17dp" />

            <CheckBox
                android:id="@+id/checkBoxSplices"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layoutDirection="rtl"
                android:text="Splices       "
                android:textSize="17dp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/offerBody"
            android:layout_width="match_parent"
            android:layout_height="285dp"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:orientation="vertical"
            android:textAlignment="center">

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:scrollbars="vertical">

                    <!-- card view -->
                    <LinearLayout
                        android:layout_width="370dp"
                        android:layout_height="200dp"
                        android:layout_marginStart="20dp"
                        android:layout_marginTop="10dp"
                        android:background="@drawable/offer_card"
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:textAlignment="center">

                        <!-- image card view-->
                        <LinearLayout
                            android:layout_width="180dp"
                            android:layout_height="180dp"
                            android:layout_marginLeft="25dp"
                            android:layout_marginTop="2dp"
                            android:background="@drawable/img_card"
                            android:gravity="center"
                            android:orientation="vertical"
                            android:textAlignment="center">

                            <ImageView
                                android:layout_width="200dp"
                                android:layout_height="150dp"
                                android:src="@drawable/banana" />


                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="200dp"
                            android:layout_height="200dp"
                            android:gravity="center"
                            android:orientation="vertical"
                            android:textAlignment="center">

                            <TextView
                                android:layout_width="110dp"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="10dp"
                                android:layout_weight="1"
                                android:layoutDirection="rtl"
                                android:text="Banana"
                                android:textSize="20dp"
                                android:textStyle="bold" />

                            <TextView
                                android:layout_width="110dp"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="-10dp"
                                android:layout_weight="1"
                                android:layoutDirection="rtl"
                                android:text="Weight : 400g"
                                android:textColor="@color/white"
                                android:textSize="18dp" />

                            <TextView
                                android:layout_width="110dp"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="-20dp"
                                android:layout_weight="1"
                                android:layoutDirection="rtl"
                                android:text="Rs. 350.00"
                                android:textColor="@color/white"
                                android:textSize="18dp" />

                            <Button
                                android:layout_width="130dp"
                                android:layout_height="50dp"
                                android:layout_marginBottom="10dp"
                                android:backgroundTint="#6B00C9"
                                android:text="Select" />

                        </LinearLayout>

                    </LinearLayout>

                    <!-- card view -->
                    <LinearLayout
                        android:layout_width="370dp"
                        android:layout_height="200dp"
                        android:layout_marginStart="20dp"
                        android:layout_marginTop="10dp"
                        android:background="@drawable/offer_card"
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:textAlignment="center">
                        <!-- image card view-->
                        <LinearLayout
                            android:layout_width="180dp"
                            android:layout_height="180dp"
                            android:layout_marginLeft="25dp"
                            android:layout_marginTop="2dp"
                            android:background="@drawable/img_card"
                            android:gravity="center"
                            android:orientation="vertical"
                            android:textAlignment="center">

                            <ImageView
                                android:layout_width="200dp"
                                android:layout_height="150dp"
                                android:src="@drawable/apple" />


                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="200dp"
                            android:layout_height="200dp"
                            android:gravity="center"
                            android:orientation="vertical"
                            android:textAlignment="center">

                            <TextView
                                android:layout_width="110dp"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="10dp"
                                android:layout_weight="1"
                                android:layoutDirection="rtl"
                                android:text="Apple"
                                android:textSize="20dp"
                                android:textStyle="bold" />

                            <TextView
                                android:layout_width="110dp"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="-10dp"
                                android:layout_weight="1"
                                android:layoutDirection="rtl"
                                android:text="Weight : 100g"
                                android:textColor="@color/white"
                                android:textSize="18dp" />

                            <TextView
                                android:layout_width="110dp"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="-20dp"
                                android:layout_weight="1"
                                android:layoutDirection="rtl"
                                android:text="Rs. 120.00"
                                android:textColor="@color/white"
                                android:textSize="18dp" />

                            <Button
                                android:layout_width="130dp"
                                android:layout_height="50dp"
                                android:layout_marginBottom="10dp"
                                android:backgroundTint="#6B00C9"
                                android:text="Select" />

                        </LinearLayout>
                    </LinearLayout>

                    <!-- card view -->
                    <LinearLayout
                        android:layout_width="370dp"
                        android:layout_height="200dp"
                        android:layout_marginStart="20dp"
                        android:layout_marginTop="10dp"
                        android:background="@drawable/offer_card"
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:textAlignment="center">
                        <!-- image card view-->
                        <LinearLayout
                            android:layout_width="180dp"
                            android:layout_height="180dp"
                            android:layout_marginLeft="25dp"
                            android:layout_marginTop="2dp"
                            android:background="@drawable/img_card"
                            android:gravity="center"
                            android:orientation="vertical"
                            android:textAlignment="center">

                            <ImageView
                                android:layout_width="200dp"
                                android:layout_height="150dp"
                                android:src="@drawable/carrot" />


                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="200dp"
                            android:layout_height="200dp"
                            android:gravity="center"
                            android:orientation="vertical"
                            android:textAlignment="center">

                            <TextView
                                android:layout_width="110dp"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="10dp"
                                android:layout_weight="1"
                                android:layoutDirection="rtl"
                                android:text="Carrot"
                                android:textSize="20dp"
                                android:textStyle="bold" />

                            <TextView
                                android:layout_width="110dp"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="-10dp"
                                android:layout_weight="1"
                                android:layoutDirection="rtl"
                                android:text="Weight : 250g"
                                android:textColor="@color/white"
                                android:textSize="18dp" />

                            <TextView
                                android:layout_width="110dp"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="-20dp"
                                android:layout_weight="1"
                                android:layoutDirection="rtl"
                                android:text="Rs. 100.00"
                                android:textColor="@color/white"
                                android:textSize="18dp" />

                            <Button
                                android:layout_width="130dp"
                                android:layout_height="50dp"
                                android:layout_marginBottom="10dp"
                                android:backgroundTint="#6B00C9"
                                android:text="Select" />

                        </LinearLayout>
                    </LinearLayout>

                </LinearLayout>
            </ScrollView>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/userProfileBottom"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:orientation="vertical"
            android:textAlignment="center">


            <Button
                android:layout_width="120dp"
                android:layout_height="45dp"
                android:backgroundTint="#00c988"
                android:layout_marginLeft="125dp"
                android:text="Next" />


        </LinearLayout>

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>

